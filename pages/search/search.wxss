.searchContainer{
  padding: 0 20rpx;
}
/* 头部搜索框 */
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.serachInput{ 
  position: relative;
  flex: 1;
  background-color: rgba(237,237,237,.3);
  border-radius: 30rpx;
}
.clear{
  position: absolute;
  z-index: 10;
  right: 16rpx;
  top: 5rpx;
  font-size: 22rpx;
  /* border: 1rpx solid red; */
  height: 50rpx;
  width: 50rpx;
    line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  background-color: rgb(197, 190, 190);
}
.cancel{
  width: 100rpx;
  text-align: center;
}
.searchIcon{
  position: absolute;
  left: 15rpx;
}
.serachInput input{
  margin-left: 54rpx;
  height: 60rpx;
}
/* 定义默认搜索值的样式 */
.placeholder{
  font-size: 30rpx;
}

/* 热搜区 */
.hotContainer title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order{
  margin: 0 10rpx;
}
.hotItem .iconImage{
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;

}

/* 搜索内容区域 */
.searchContent{
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.searchItem .content{
  flex: 1;
}

/* 历史记录 */
.history{
  display: flex;
  line-height: 50rpx;
  flex-wrap: wrap;
  margin: 10rpx 0;
  position: relative;
}
.history title{
  height: 50rpx;
  font-size: 28rpx;
}
.historyItem{
  height: 50rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  border-radius: 20rpx;
  padding:0 30rpx;
  margin: 0 0 20rpx 20rpx;
  font-size: 26rpx;
}
.delete{
  position: absolute;
  right: -12rpx;
  top: -6rpx;
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  /* background-color: rgb(184, 179, 179); */
  font-size: 36rpx;
  /* border-radius: 50%; */
}